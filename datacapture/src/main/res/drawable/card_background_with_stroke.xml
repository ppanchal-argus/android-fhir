<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Set your desired background color for the card -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp"
    >
        <shape android:shape="rectangle">
            <!-- Set your desired stroke color -->
            <stroke android:width="2dp" android:color="#A6A6A6" />
        </shape>
    </item>
</layer-list>
